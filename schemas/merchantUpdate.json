{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Merchant Update",
  "type": "object",
  "properties": {
    "owner_id": {
      "type": "string",
      "description": "The unique identifier for the owner"
    },
    "name": {
      "type": "string",
      "description": "The name of the merchant"
    },
    "address": {
      "type": "string",
      "description": "The address of the merchant"
    },
    "phone_number": {
      "type": "string",
      "description": "The phone number of the merchant"
    },
    "status": {
      "type": "string",
      "description": "The status of the merchant"
    },
    "description": {
      "type": "string",
      "description": "The description of the merchant"
    },
    "logo": {
      "type": "string",
      "description": "The logo of the merchant"
    },
    "opening_time": {
      "type": "string",
      "format": "time",
      "description": "The opening time of the merchant"
    },
    "closing_time": {
      "type": "string",
      "format": "time",
      "description": "The closing time of the merchant"
    },
    "operating_days": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "The operating days of the merchant"
    }
  },
  "required": ["name"],
  "additionalProperties": false
}
